{
  "name": "bmo-gamification-service",
  "version": "0.1.0",
  "description": "Backend Node.js em TypeScript para gamificação do BMO.",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/app.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/app.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check \"{src,config,scripts}/**/*.ts\"",
    "format:fix": "prettier --write \"{src,config,scripts}/**/*.ts\"",
    "firestore:bootstrap": "ts-node src/scripts/bootstrapFirestore.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  }
}
